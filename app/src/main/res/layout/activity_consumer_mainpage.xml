<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/txt_border"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=" Our recomendations "/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <ListView
            android:id="@+id/recomendationLV"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:isScrollContainer="true"></ListView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/txt_border"
        android:text="See the best prices in each category"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/byCategoryLV"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:isScrollContainer="true">
        </ListView>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/txt_border"
        android:text="Most popular this week"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/byPopularityLV"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:isScrollContainer="true">
        </ListView>

    </RelativeLayout>



</LinearLayout>